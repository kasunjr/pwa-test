{
  "manifest_version": 3,
  "name": "Mock Messaging Extension",
  "version": "1.3",
  "description": "A Chrome extension to test messaging with a PWA",
  "background": {
    "service_worker": "background.js"
  },
  "permissions": [
    "runtime",
    "tabs",
    "activeTab",
    "audio"
  ],
  "content_scripts": [
    {
      "matches": ["http://localhost:8000/*", "https://kasunjr.github.io/pwa-test/*"],
      "js": ["content.js"]
    }
  ],
  "externally_connectable": {
    "matches": ["http://localhost:8000/*", "https://kasunjr.github.io/pwa-test/*"]
  }
}